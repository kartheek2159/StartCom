                        <th scope="row">
                            <%= query._id%>
                        </th>
                        <td>
                            <%= query.name %>
                        </td>
                        <td>
                            <%= query.username %>
                        </td>
                        <td>
                            <%= query.email %>
                        </td>
                        <%})%>
                    </tr>
            </tbody>
        </table>

        <form action=" " method="post">
