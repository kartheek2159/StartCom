    <title>Document</title>
    <script>
        document.getElementById('userID').addEventListener("click", async (e) => {
            e.preventDefault();
            const rawResponse = await fetch('/admin', {
                method: 'POST',
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ userid: document.getElementById('userid').value })
            });
            const content = await rawResponse.json();
            if (content.status == 'true') {
                window.location.href = "/admin"
            }
            else {
                console.log("Failed please try again")
                window.location.href = "/admin"

            }
        })

        document.getElementById('postID').addEventListener("click", async (e) => {
            e.preventDefault();
